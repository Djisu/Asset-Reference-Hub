{
  "name": "devrefasset",
  "version": "1.0.0",
  "description": "a social app for assets reference",
  "main": "server.js",
  "engines": {
    "node": "8.11.3",
    "yarn": "1.10.1"
  },
  "scripts": {
    "client-install": "yarn install --prefix client ",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \" npm run server \" \" npm run client \"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Paul Fleischer-Djoleto",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "cloudinary": "^1.11.0",
    "concurrently": "^4.0.1",
    "express": "^4.16.4",
    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.6",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "validator": "^10.8.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.4"
  }
}
